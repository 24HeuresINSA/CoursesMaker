rotis_course_maker:
    resource: "@RotisCourseMakerBundle/Resources/config/routing.yml"
    prefix:   /

login:
    pattern: /login
    defaults: { _controller: RotisCourseMakerBundle:Security:login }
login_check:
    pattern: /login_check
logout:
    pattern:   /logout
register:
    pattern: /register
    defaults: { _controller: RotisCourseMakerBundle:Security:register }
create:
    pattern: /create
    defaults: { _controller: RotisCourseMakerBundle:Security:create }
accueil:
    pattern: /accueil
    defaults: { _controller: RotisCourseMakerBundle:CourseMaker:dispatcher }
