{% extends 'RotisCourseMakerBundle::layout.html.twig' %}

{% block title %}CoursesMaker - Admin{% endblock %}

{% block div %}                
	<h1>Administration</h1> 
{% endblock %}

{% block content %}

    <h1>Liste des Courses</h1>

    
    
    <div class="container-fluid">
		<div class="row-fluid">            
			<div class="span12">
		 		<div class="row-fluid">
		 			{% for course in courses %}
                	<div class="span3">
						<a href="admin_equipes/{{ course.nom }} ">{{ course.nom }}</a>
                	</div><!--/span-->
                	{% endfor %}
              	</div><!--/row-->
			</div><!--/span-->
		</div><!--/row-->
	</div><!--/container -->

{% endblock %}