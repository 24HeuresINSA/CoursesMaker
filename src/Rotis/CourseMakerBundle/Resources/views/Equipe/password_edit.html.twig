    {% if app.session.hasFlash('notice') %}
        <div class="flash-notice">
            <h3 class="notice">{{ app.session.flash('notice') }}</h3>
        </div>
    {% endif %}
{% endblock %}
{% block content %}


    <div class="container-fluid">
        <div class="row-fluid">
            <div class="offset1 span10">
                <form action="{{ path('admin_edit_password', { 'id': equipe.id }) }}" method="post" {{ form_enctype(form) }}
                      class="well">
                    <table>
                        <tr>
                            <td>{{  form_label(form.username) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_widget(form.username) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_widget(form.password) }}</td>
