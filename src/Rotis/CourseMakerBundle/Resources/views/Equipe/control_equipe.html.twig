{% extends 'RotisCourseMakerBundle::layout.html.twig' %}

{% block title %}CoursesMaker - Controle des Equipes{% endblock %}
{% block div %}
    <h1>Tableau de Bord</h1>
{% endblock %}
{% block content %}

    Nombre total d'équipes: {{ nbTotalEquipes }} <br />
    Nombre d'équipes valides: {{ nbEquipesValides }}

    <form action="{{ path('admin_control', {'name': 'equipe'}) }}" method="post" {{ form_enctype(form) }} class="form-inline well">
        <legend>Rechercher les noms des coureurs</legend>
        {{ form_widget(form.mot) }}
        {{ form_rest(form) }}
        <input type="submit" class="btn"/>
    </form>

    <ul>
        {% for equipe in equipes %}
            <li><a href="{{ path('account', { 'id': equipe.id }) }} ">{{ equipe.username }}</a> {% if equipe.getValide() %}<p id="val">Valide</p>{% else %}<p id="pasval">Pas Valide</p>{% endif %}</li>
        {% endfor %}
    </ul>

<style>
    #val{
        color: green;
        display: inline;
    }
    #pasval{
        color: red;
        display: inline;
    }
</style>
{% endblock %}