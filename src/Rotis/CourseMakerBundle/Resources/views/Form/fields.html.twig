{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <div class="alert alert-error">
        {% for error in errors %}
            <span class="text-danger">{{ error.message }}</span>
            {% if loop.last == false %}<br />{% endif %}
        {% endfor %}
    </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}